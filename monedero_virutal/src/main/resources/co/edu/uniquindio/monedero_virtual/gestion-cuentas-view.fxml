<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.monedero_virtual.view.GestionCuentasViewController">
    
    <!-- Contenedor principal anclado a los bordes de la ventana -->
    <StackPane AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        
        <!-- Tarjeta principal vertical que ocupa todo el espacio disponible -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            
            <!-- Secci칩n superior con gradiente -->
            <VBox prefHeight="80.0" prefWidth="319.0" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 15; -fx-background-radius: 15 15 0 0;">
                
                <!-- Header con saludo y bot칩n de notificaci칩n -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="userNameLabel" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Hola, Carlos" />
                    <Region HBox.hgrow="ALWAYS" />
                    
                    <!-- Bot칩n de notificaciones -->
                    <StackPane>
                        <Button fx:id="notificationButton" onAction="#onAbrirNotificaciones" style="-fx-background-color: transparent; -fx-padding: 5;">
                            <!-- Aqu칤 ir칤a un 칤cono de campana, pero usar칠 un c칤rculo como placeholder -->
                            <graphic>
                                <StackPane>
                                    <Circle radius="12" style="-fx-fill: white; -fx-opacity: 0.85;" />
                                    <Label style="-fx-font-size: 12; -fx-text-fill: #764ba2;" text="游댒" />
                                </StackPane>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Notificaciones" />
                            </tooltip>
                        </Button>
                        <!-- Indicador de notificaciones nuevas -->
                        <Circle radius="5" style="-fx-fill: #ff4757;" StackPane.alignment="TOP_RIGHT">
                            <StackPane.margin>
                                <Insets right="-5.0" top="-2.0" />
                            </StackPane.margin>
                        </Circle>
                    </StackPane>
                </HBox>
                
                <!-- T칤tulo de la secci칩n -->
                <Label style="-fx-font-size: 14; -fx-text-fill: white; -fx-opacity: 0.9;" text="Gestiona tus cuentas bancarias" />
            </VBox>
            
            <!-- Contenedor flexible que ocupar치 el espacio restante -->
            <VBox spacing="15" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                
                <!-- Formulario para agregar cuentas -->
                <VBox spacing="10">
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Nueva cuenta" />
                    
                    <!-- Campo Nombre del banco -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 13; -fx-text-fill: #555555; -fx-font-weight: 500;" text="Nombre del banco" />
                        <TextField fx:id="bankNameField" promptText="Ej: Banco de Bogot치" style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" />
                    </VBox>
                    
                    <!-- Campo ID de la cuenta -->
                    <VBox spacing="5">
                        <Label style="-fx-font-size: 13; -fx-text-fill: #555555; -fx-font-weight: 500;" text="ID de la cuenta" />
                        <TextField fx:id="accountIdField" promptText="Ej: 1234567890" style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" />
                    </VBox>
                    

                    
                    <!-- Botones de acci칩n -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="addButton" onAction="#onAddAccount" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: 500;" text="Agregar">
                            <effect>
                                <DropShadow color="rgba(102, 126, 234, 0.4)" radius="5" spread="0.05" />
                            </effect>
                        </Button>
                        <Button fx:id="clearButton" onAction="#onClearFields" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-padding: 10; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1; -fx-font-size: 13;" text="Limpiar" />
                    </HBox>
                </VBox>
                
                <Separator>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Separator>
                
                <!-- Secci칩n de b칰squeda -->
                <HBox alignment="CENTER" spacing="10">
                    <TextField fx:id="searchField" promptText="Buscar por banco o ID" style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" onAction="#onSearchAccount" style="-fx-background-color: #f0f2f5; -fx-text-fill: #555555; -fx-padding: 10; -fx-background-radius: 8; -fx-font-size: 13;" text="Buscar" />
                </HBox>
                
                <!-- Tabla de cuentas -->
                <TableView fx:id="accountsTable" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="bankNameColumn" prefWidth="110.0" text="Banco" />
                        <TableColumn fx:id="accountIdColumn" prefWidth="100.0" text="ID Cuenta" />
                        <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Monto" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </TableView>
                
                <!-- Bot칩n para eliminar cuenta seleccionada -->
                <Button fx:id="deleteButton" onAction="#onDeleteAccount" style="-fx-background-color: #ff4757; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: 500;" text="Eliminar seleccionada">
                    <effect>
                        <DropShadow color="rgba(255, 71, 87, 0.4)" radius="5" spread="0.05" />
                    </effect>
                </Button>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
