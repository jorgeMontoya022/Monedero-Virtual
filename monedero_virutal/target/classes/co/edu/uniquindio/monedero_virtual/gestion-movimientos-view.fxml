<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.monedero_virtual.view.GestionMovimientosViewController">
    
    <!-- Contenedor principal anclado a los bordes de la ventana -->
    <StackPane AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        
        <!-- Tarjeta principal vertical que ocupa todo el espacio disponible -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            
            <!-- Sección superior con gradiente -->
            <VBox prefHeight="80.0" prefWidth="319.0" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 15; -fx-background-radius: 15 15 0 0;">
                
                <!-- Header con saludo y botón de notificación -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="userNameLabel" prefHeight="27.0" prefWidth="251.0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Tus Movimientos, Carlos">
                  <font>
                     <Font size="11.0" />
                  </font></Label>
                    <Region HBox.hgrow="ALWAYS" />
                    
                    <!-- Botón de notificaciones -->
                    <StackPane>
                        <Button fx:id="notificationButton" onAction="#onAbrirNotificaciones" style="-fx-background-color: transparent; -fx-padding: 5;">
                            <!-- Aquí iría un ícono de campana, pero usaré un círculo como placeholder -->
                            <graphic>
                                <StackPane>
                                    <Circle radius="12" style="-fx-fill: white; -fx-opacity: 0.85;" />
                                    <Label style="-fx-font-size: 12; -fx-text-fill: #764ba2;" text="🔔" />
                                </StackPane>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Notificaciones" />
                            </tooltip>
                        </Button>
                        <!-- Indicador de notificaciones nuevas -->
                        <Circle radius="5" style="-fx-fill: #ff4757;" StackPane.alignment="TOP_RIGHT">
                            <StackPane.margin>
                                <Insets right="-5.0" top="-2.0" />
                            </StackPane.margin>
                        </Circle>
                    </StackPane>
                </HBox>
                
                <!-- Título de la sección -->
                <Label style="-fx-font-size: 14; -fx-text-fill: white; -fx-opacity: 0.9;" text="Movimientos Transaccionales" />
            </VBox>
            
            <!-- Contenedor flexible que ocupará el espacio restante -->
            <VBox spacing="15" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">
                
                <!-- Filtros de búsqueda por fecha -->
                <VBox spacing="10">
                    <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Filtrar por fecha" />
                    
                    <!-- Campos de selección de fecha -->
                    <HBox prefHeight="59.0" prefWidth="289.0" spacing="10">
                  <children>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label text="Fecha Inicio" />
                           <DatePicker />
                        </children>
                     </VBox>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label text="Fecha Fin" />
                           <DatePicker />
                        </children>
                     </VBox>
                  </children>
                    </HBox>
                    
                    <!-- Botones de acción -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="searchButton" onAction="#onSearchTransactions" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: 500;" text="Buscar">
                            <effect>
                                <DropShadow color="rgba(102, 126, 234, 0.4)" radius="5" spread="0.05" />
                            </effect>
                        </Button>
                        <Button fx:id="clearButton" onAction="#onClearFilters" style="-fx-background-color: transparent; -fx-text-fill: #666666; -fx-padding: 10; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1; -fx-font-size: 13;" text="Limpiar" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="reportButton" onAction="#onGenerateReport" style="-fx-background-color: #f0f2f5; -fx-text-fill: #555555; -fx-padding: 10; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: 500;" text="Generar Reporte">
                            <graphic>
                                <Label style="-fx-font-size: 12; -fx-text-fill: #555555;" text="📄" />
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
                
                <Separator>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Separator>
                
                <!-- Tabla de transacciones -->
                <TableView fx:id="transactionsTable" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateColumn" prefWidth="90.0" text="Fecha" />
                        <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="120.0" text="Descripción" />
                        <TableColumn fx:id="accountColumn" prefWidth="100.0" text="Cuenta" />
                        <TableColumn fx:id="walletColumn" prefWidth="100.0" text="Monedero" />
                        <TableColumn fx:id="typeColumn" prefWidth="110.0" text="Tipo" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </TableView>
                
                <!-- Información de totales -->
                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <Label style="-fx-font-size: 13; -fx-text-fill: #555555; -fx-font-weight: 500;" text="Total transacciones:" />
                    <Label fx:id="totalTransactionsLabel" style="-fx-font-size: 13; -fx-font-weight: bold; -fx-text-fill: #333333;" text="0" />
                </HBox>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>