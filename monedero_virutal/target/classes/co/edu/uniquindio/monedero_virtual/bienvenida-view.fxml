<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.monedero_virtual.view.BienvenidaViewController">
    
    <!-- Contenedor principal anclado a los bordes de la ventana -->
    <StackPane AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        
        <!-- Tarjeta principal vertical que ocupa todo el espacio disponible -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            
            <!-- Sección superior con gradiente (altura reducida) -->
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 25; -fx-background-radius: 15 15 0 0;">
                <!-- Logo de la aplicación (tamaño reducido) -->
                <ImageView fitHeight="99.0" fitWidth="99.0">
                   <image>
                      <Image url="@solvi%20blanco.png" />
                   </image>
                </ImageView>
                
                <!-- Eslogan (con más espacio horizontal y más pequeño) -->
                <Label alignment="CENTER" style="-fx-font-size: 14; -fx-text-fill: white; -fx-opacity: 0.9;" text="Porque manejar tu dinero no debería ser complicado" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </VBox.margin>
                </Label>
            </VBox>
            
            <!-- Contenedor flexible para botones -->
            <VBox alignment="CENTER" spacing="20" style="-fx-padding: 25;" VBox.vgrow="ALWAYS">
                
                <!-- Texto descriptivo (más compacto) -->
                <Label alignment="CENTER" style="-fx-font-size: 16; -fx-text-fill: #555555;" text="¡Bienvenido a tu monedero virtual!" textAlignment="CENTER" wrapText="true" />
                <Label alignment="CENTER" style="-fx-font-size: 13; -fx-text-fill: #888888;" text="La manera más segura y sencilla de administrar tus finanzas personales" textAlignment="CENTER" wrapText="true">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </Label>
                
                <!-- Espaciador flexible -->
                <Region VBox.vgrow="ALWAYS" />
                
                <!-- Botón de iniciar sesión (altura ajustada) -->
                <Button fx:id="loginButton" maxWidth="Infinity" onAction="#OnIrInicioSesion" prefHeight="45.0" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 8; -fx-font-size: 15; -fx-font-weight: 500;" text="Iniciar sesión">
                    <effect>
                        <DropShadow color="rgba(102, 126, 234, 0.4)" radius="5" spread="0.05" />
                    </effect>
                </Button>
                
                <!-- Botón de registro (altura ajustada) -->
                <Button fx:id="registerButton" maxWidth="Infinity" onAction="#onIrRegistro" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: #667eea; -fx-padding: 12; -fx-background-radius: 8; -fx-font-size: 15; -fx-font-weight: 500; -fx-border-color: #667eea; -fx-border-radius: 8; -fx-border-width: 2;" text="Crear cuenta nueva" />
                
                <!-- Sección de pie de página con derechos de autor -->
                <HBox alignment="CENTER">
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                    <Label style="-fx-font-size: 11; -fx-text-fill: #888888;" text="© 2025 Solvi. Todos los derechos reservados." />
                </HBox>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
