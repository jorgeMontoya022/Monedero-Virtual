<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="350.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #c3cfe2);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.monedero_virtual.view.LoginViewController">
    
    <!-- Contenedor principal anclado a los bordes de la ventana -->
    <StackPane AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        
        <!-- Tarjeta principal vertical que ocupa todo el espacio disponible -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            
            <!-- Sección superior/logo con gradiente -->
            <VBox alignment="CENTER" prefWidth="309.0" spacing="10" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 25; -fx-background-radius: 15 15 0 0;">
            <ImageView fitHeight="68.0" fitWidth="78.0">
               <image>
                  <Image url="@solvi%20blanco.png" />
               </image>
            </ImageView>
                
                <!-- Icono y texto descriptivo -->
                <HBox alignment="CENTER" spacing="15">
                    <VBox alignment="CENTER_LEFT">
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Gestiona tus finanzas" />
                        <Label style="-fx-font-size: 14; -fx-text-fill: white; -fx-opacity: 0.9;" text="Tu monedero virtual seguro" wrapText="true" />
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Contenedor flexible que ocupará el espacio restante -->
            <VBox spacing="20" style="-fx-padding: 25;" VBox.vgrow="ALWAYS">
                <!-- Título -->
                <Label style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Bienvenido de nuevo" />
                <Separator>
                    <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                    </VBox.margin>
                </Separator>
                
                <!-- Campo Email -->
                <VBox spacing="8">
                    <Label style="-fx-font-size: 14; -fx-text-fill: #555555; -fx-font-weight: 500;" text="Correo electrónico" />
                    <TextField fx:id="emailField" promptText="Ingresa tu correo" style="-fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" />
                </VBox>
                
                <!-- Campo Contraseña -->
                <VBox spacing="8">
                    <Label style="-fx-font-size: 14; -fx-text-fill: #555555; -fx-font-weight: 500;" text="Contraseña" />
                    <PasswordField fx:id="passwordField" promptText="Ingresa tu contraseña" style="-fx-padding: 12; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e1e1e1;" />
                </VBox>
                
                <!-- Opciones -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <CheckBox fx:id="rememberCheckbox" style="-fx-font-size: 14; -fx-text-fill: #555555;" text="Recordarme" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Hyperlink style="-fx-font-size: 14; -fx-text-fill: #667eea;" text="¿Olvidaste tu contraseña?" />
                </HBox>
                
                <!-- Espaciador flexible que empuja el botón y el enlace hacia abajo -->
                <Region VBox.vgrow="ALWAYS" />
                
                <!-- Botón de login -->
                <Button fx:id="loginButton" maxWidth="Infinity" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 8; -fx-font-size: 15; -fx-font-weight: 500;" text="Iniciar sesión">
                    <effect>
                        <DropShadow color="rgba(102, 126, 234, 0.4)" radius="5" spread="0.05" />
                    </effect>
                </Button>
                
                <!-- Enlace de registro -->
                <HBox alignment="CENTER" spacing="5">
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                    <Label style="-fx-font-size: 14; -fx-text-fill: #666666;" text="¿No tienes una cuenta?" />
                    <Hyperlink style="-fx-font-size: 14; -fx-text-fill: #667eea; -fx-font-weight: 500;" text="Regístrate aquí" />
                </HBox>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
